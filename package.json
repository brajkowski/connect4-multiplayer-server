{
  "name": "@brajkowski/connect4-web-multiplayer-server",
  "version": "1.0.0",
  "description": "A websocket server that can connect connect 4 game clients together.",
  "scripts": {
    "build": "rimraf ./dist && tsc && ag -o ./dist/public/ ./docs/api.yml @asyncapi/html-template",
    "start:dev": "ts-node ./src/index.ts",
    "start": "node ./dist/index.js",
    "test": "jest"
  },
  "author": "Brandon Rajkowski",
  "license": "MIT",
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "devDependencies": {
    "@asyncapi/generator": "^1.7.2",
    "@asyncapi/html-template": "^0.22.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.20",
    "@types/uuid": "^8.3.0",
    "@types/ws": "^7.4.0",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@brajkowski/connect4-logic": "^1.0.3",
    "@brajkowski/connect4-multiplayer-common": "^1.0.0",
    "express": "^4.17.1",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "ws": "^7.4.2"
  }
}
